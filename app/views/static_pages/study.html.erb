<p id="notice"><%= notice %></p>

<div class="container">

<h1>Words</h1>

<div class="text-right"><%= link_to 'New Word', new_word_path, class: " btn-lg waves-effect waves-light btn red accent-1" %></div>

<table>
  <thead>
    <tr>
      <th>Deutsch</th>
      <th>Remarks</th>
      <th>Sample sentence</th>
      <th>English</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.deutsch %></td>
        <td><%= word.remarks %></td>
        <td><%= word.sample_sentence %></td>
        <td><%= word.english %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>